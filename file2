NAME = pipex
CC = gcc
C_FLAGS = -Wall -Werror -Wextra -g 
F_SAN = -fsanitize=address

SRC_FILES = pipex.c
OBJ_DIR = obj
SRC_DIR = src
OBJ_FILES = $(addprefix $(OBJ_DIR)/, $(notdir $(SRC_FILES: .c=.o)))

INCLUDE = -Iinlude

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(C_FLAGS) $(F_SAN) $(INCLUDE) -o $@

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	mkdir -p $(OBJ_DIR)
	$(CC) $(C_FLAGS) $(INCLUDE) -c $< -o $@

clean: 
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re